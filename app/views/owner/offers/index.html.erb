<h1>offers for owners</h1>

<%= link_to "Create Offer", new_owner_offer_path, class: 'btn btn-success' %>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Starts</th>
      <th scope="col">Ends</th>
      <th scope="col">Duration</th>
      <th scope="col">Capacity</th>
      <th scope="col">Parking Price</th>
      <th scope="col">Discount</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>

  <% @offers.each do |offer| %>
    <tr>
      <th scope="row"><%= offer.id %></th>
      <td><%= offer.starts %></td>
      <td><%= offer.ends %></td>
      <td><%= offer.days %></td>
      <td><%= offer.capacity %></td>
      <td><%= offer.parking_price %></td>
      <td><%= offer.discount %></td>
      <td><%= link_to "Edit", edit_owner_offer_path(offer) %></td>
      <td><%= link_to "Delete", owner_offer_path(offer), method: :delete %></td>
    </tr>
  <% end %>

  </tbody>
</table>
